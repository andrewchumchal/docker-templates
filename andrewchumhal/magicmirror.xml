<?xml version="1.0"?>
<Container version="1">
  <Name>MagicMirro</Name>
  <Repository>bastilimbach/docker-magicmirror</Repository>
  <Beta>True</Beta>
  <Network>host</Network>
  <Privileged>false</Privileged>
  <Support/>
    <Overview> MagicMirror is an open source modular smart mirror platform. With a growing list of installable modules, the MagicMirror allows you to convert your hallway or bathroom mirror into your personal assistant.</Overview>
    <Category>Network:Web</Category>
    <WebUI>http://[IP]:[PORT:8080]</WebUI>
    <TemplateURL>https://github.com/andrewchumchal/docker-templates/blob/master/andrewchumhal/magicmirror.xml</TemplateURL>
    <Icon>https://magicmirror.builders/img/magpi-best-watermark-custom.png</Icon>
  <ExtraParams/>
    <DateInstalled>1459254872</DateInstalled>
    <Description>MagicMirror is Open Source, free and maintained by a big group of enthusiasts. Got a nice idea? Send us a pull request and become a part of the big list of contributors.</Description>
  <Networking>
    <Mode>host</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>~/magic_mirror/config:/opt/magic_mirror/config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>~/magic_mirror/modules:/opt/magic_mirror/modules</HostDir>
      <ContainerDir>/modules</ContainerDir>
      <Mode>re</Mode>
    </Volume>
  </Data>
  <Enviroment/>
  <Config Name="Config Directory" Target="/config" Defualt="~/magic_mirror/config:/opt/magic_mirror/config" Mode="rw" Description="In this directory, MagicMirror will store it's configuration files" Type="Path" Display="always-hide" Required="true" Mask="false"></Config>
  <Config Name="Config Directory" Target="/modules" Defualt="~/magic_mirror/modules:/opt/magic_mirror/modules" Mode="rw" Description="In this directory, MagicMirror will store it's modules files" Type="Path" Display="always-hide" Required="true" Mask="false"></Config>
  <Config Name="WebUI Port" Target="8080" Defualt="8080" Mode="tcp" Description="This is MagicMirror WebUI Port" Type="Port" Display="advanced-hide" Required="true" Mask="false"></Config>
  </Container>